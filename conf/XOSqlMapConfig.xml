<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//iBATIS.com//DTD SQL Map Config 2.0//EN" "http://www.ibatis.com/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
	<properties resource="jdbc.properties" />

	<settings cacheModelsEnabled="true" enhancementEnabled="true"
		lazyLoadingEnabled="false" useStatementNamespaces="false" maxSessions="128"
		maxTransactions="32" maxRequests="512" />


	<transactionManager type="JDBC">
		<dataSource type="DBCP">
			<property name="JDBC.Driver" value="${oracle.jdbc.driverClassName}" />
			<property name="JDBC.ConnectionURL" value="${xo.oracle.jdbc.url}" />
			<property name="JDBC.Username" value="${xo.oracle.jdbc.username}" />
			<property name="JDBC.Password" value="${xo.oracle.jdbc.password}" />
			<property name="JDBC.DefaultAutoCommit" value="false" />
			<!--OPTIONAL PROPERTIES BELOW -->
			<property name="Pool.MaximumActiveConnections" value="${oracle.jdbc.maxActive}" />
			<property name="Pool.MaximumIdleConnections" value="${oracle.jdbc.maxIdle}" />
			<property name="Pool.MaximumWait" value="${oracle.jdbc.maxWait}" />
			<property name="Pool.ValidationQuery" value="${oracle.jdbc.validationQuery}" />
		</dataSource>
	</transactionManager>

	<sqlMap resource="sqlmapXO/paymentcancelXo.xml" />
	<sqlMap resource="sqlmapXO/statistics.xml" />
	<sqlMap resource="sqlmapXO/trade.xml" />
	<sqlMap resource="sqlmapXO/ssgInfo.xml" />
	<sqlMap resource="sqlmapXO/rank.xml" />
	<sqlMap resource="sqlmapXO/autoPush.xml" />
	<sqlMap resource="sqlmapXO/wholecakeOrderXo.xml" />
	<sqlMap resource="sqlmapXO/mms.xml" />
	<sqlMap resource="sqlmapXO/eGiftItemXo.xml" />
	<sqlMap resource="sqlmapXO/reserveSendNoticeXo.xml" />
	<sqlMap resource="sqlmapXO/xoGift.xml" />
	<sqlMap resource="sqlmapXO/ezorder.xml" />
	<sqlMap resource="sqlmapXO/giftshopProductRank.xml" />
	
	<sqlMap resource="sqlmapXO/autoPushSS.xml" />
	
	<sqlMap resource="sqlmapXO/xoGift2.xml" />
	<sqlMap resource="sqlmapXO/msReview.xml" />

    <sqlMap resource="sqlmapXO/batchResult.xml"/>
    
    
	<sqlMap resource="sqlmapXO/orderMsg.xml" />
    
    
	<sqlMap resource="sqlmapXO/preOrder.xml" />
</sqlMapConfig>